{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node" /* Skip type checking all .d.ts files. */,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    /** 절대 경로 설정 */
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
